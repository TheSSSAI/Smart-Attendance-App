{
  "name": "identity-access-services",
  "version": "1.0.0",
  "description": "Identity and Access Management microservice for the Attendance Tracking application.",
  "private": true,
  "main": "lib/index.js",
  "engines": {
    "node": "20"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions,firestore,auth,pubsub",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "deploy:dev": "firebase use dev && firebase deploy --only functions:identity-access-services",
    "deploy:staging": "firebase use staging && firebase deploy --only functions:identity-access-services",
    "deploy:prod": "firebase use prod && firebase deploy --only functions:identity-access-services",
    "logs": "firebase functions:log",
    "lint": "eslint --ext .js,.ts .",
    "lint:fix": "eslint --ext .js,.ts . --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.3",
    "date-fns-tz": "^3.1.3",
    "firebase-admin": "^12.1.0",
    "firebase-functions": "^5.0.1",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "eslint": "^8.57.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "firebase-functions-test": "^3.2.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.3",
    "typescript": "^5.4.5"
  }
}