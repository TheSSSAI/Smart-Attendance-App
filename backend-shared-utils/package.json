{
  "name": "@attendance-app/backend-shared-utils",
  "version": "1.0.0",
  "description": "A reusable library containing common utilities and cross-cutting concerns for all backend Cloud Functions.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "clean": "rm -rf dist coverage",
    "lint": "eslint \"src/**/*.ts\" \"__tests__/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\" \"__tests__/**/*.ts\"",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/backend-shared-utils.git"
  },
  "author": "Attendance App Engineering",
  "license": "UNLICENSED",
  "private": true,
  "publishConfig": {
    "access": "restricted"
  },
  "dependencies": {
    "@google-cloud/logging": "^11.0.0",
    "@google-cloud/secret-manager": "^5.3.0",
    "firebase-admin": "^12.1.0",
    "firebase-functions": "^5.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^18.19.33",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.3",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}